{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:all",
    "schedule:monthly"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "@babel/traverse",
        "@date-io/date-fns",
        "@emotion/styled",
        "@mui/icons-material",
        "@mui/lab",
        "@testing-library/react",
        "@types/react",
        "class-validator",
        "graphql-middleware",
        "graphql-scalars",
        "graphql-shield",
        "graphql",
        "micro",
        "next",
        "react-dom",
        "react",
        "webpack-dev-server"
      ],
      "dependencyDashboardApproval": true
    }
  ]
}
