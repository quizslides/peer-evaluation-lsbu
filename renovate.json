{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "group:all", "schedule:weekly"],
  "packageRules": [
    {
      "matchPackageNames": [
        "@babel/traverse",
        "@date-io/date-fns",
        "@emotion/styled",
        "@mui/icons-material",
        "@mui/lab",
        "@testing-library/react",
        "@types/react",
        "class-validator",
        "eslint",
        "formik",
        "graphql-middleware",
        "graphql-scalars",
        "graphql-shield",
        "graphql",
        "micro",
        "next",
        "react-dom",
        "react",
        "webpack-dev-server"
      ],
      "dependencyDashboardApproval": true
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["docker.io/library/node"],
      "versionCompatibility": "^(?<version>[^-]+)(?<compatibility>-alpine3.19)?$",
      "versioning": "node"
    }
  ],
  "osvVulnerabilityAlerts": true
}
