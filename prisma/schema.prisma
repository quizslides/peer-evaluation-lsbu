generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator typegraphql {
  provider = "typegraphql-prisma"
}

model User {
  id                            String                         @id @default(cuid())
  createdAt                     DateTime                       @default(now())
  updatedAt                     DateTime                       @default(now()) @updatedAt
  name                          String
  email                         String                         @unique
  sessions                      Session[]
  role                          UserRoles                      @default(STUDENT)
  emailVerified                 DateTime?
  peerEvaluationTeachingMembers PeerEvaluationTeachingMember[]
  peerEvaluationStudentList     PeerEvaluationStudent[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
}

// The peer evaluation object
model PeerEvaluation {
  id                            String                         @id @default(cuid())
  createdAt                     DateTime                       @default(now())
  updatedAt                     DateTime                       @default(now()) @updatedAt
  title                         String
  schools                       Schools[]
  code                          String                         @unique
  status                        PeerEvaluationStatuses         @default(DRAFT)
  maxMarkIncrease               Int                            @default(10)
  maxMarkDecrease               Int                            @default(100)
  submissionsLockDate           DateTime?
  peerEvaluationTeachingMembers PeerEvaluationTeachingMember[]
  reminderEmail                 Email?
  columns                       PeerEvaluationColumn[]
  criteriaScoreRangeMin         Int                            @default(1)
  criteriaScoreRangeMax         Int                            @default(5)
  peerEvaluationStudents        PeerEvaluationStudent[]
  PeerEvaluationStudentTeam     PeerEvaluationStudentTeam[]
}

// The peer evaluation data of each student
model PeerEvaluationStudent {
  id                               String                       @id @default(cuid())
  createdAt                        DateTime                     @default(now())
  updatedAt                        DateTime                     @default(now()) @updatedAt
  user                             User                         @relation(fields: [userId], references: [id])
  userId                           String
  peerEvaluation                   PeerEvaluation               @relation(fields: [peerEvaluationId], references: [id])
  peerEvaluationId                 String
  peerEvaluationStudentTeam        PeerEvaluationStudentTeam?   @relation(fields: [peerEvaluationStudentTeamId], references: [id])
  peerEvaluationStudentTeamId      String?
  averageCriteriaScore             Decimal?
  averageCriteriaScoreByTeamMember Decimal?
  systemCalculatedMark             Decimal?
  systemAdjustedMark               Decimal?
  lecturerAdjustedMark             Decimal?
  finalMark                        Decimal?
  comments                         String?
  peerEvaluationReviewed           PeerEvaluationStudentReview? // Peer evaluation that the student is reviewing
  PeerEvaluationReviewees          PeerEvaluationReviewee[] // Peer evaluations reviewed submitted to the student

  @@unique([userId, peerEvaluationId])
}

// Full Review Table
model PeerEvaluationStudentReview {
  id                      String                   @id @default(cuid())
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @default(now()) @updatedAt
  peerEvaluationStudent   PeerEvaluationStudent    @relation(fields: [peerEvaluationStudentId], references: [id])
  peerEvaluationStudentId String                   @unique
  PeerEvaluationReviewees PeerEvaluationReviewee[]
  isCompleted             Boolean
}

// Reviewee Row
model PeerEvaluationReviewee {
  id                           String                         @id @default(cuid())
  createdAt                    DateTime                       @default(now())
  updatedAt                    DateTime                       @default(now()) @updatedAt
  studentReviewed              PeerEvaluationStudent          @relation(fields: [studentReviewedId], references: [id])
  studentReviewedId            String
  criteriaScoreTotal           Int?
  comment                      String?
  peerEvaluationReview         PeerEvaluationStudentReview?   @relation(fields: [peerEvaluationReviewId], references: [id])
  peerEvaluationReviewId       String?
  PeerEvaluationRevieweeColumn PeerEvaluationRevieweeColumn[]
  isInvalid                    Boolean
}

// Reviewee Column
model PeerEvaluationRevieweeColumn {
  id                       String                 @id @default(cuid())
  createdAt                DateTime               @default(now())
  updatedAt                DateTime               @default(now()) @updatedAt
  criteriaScore            Int?
  peerEvaluationReviewee   PeerEvaluationReviewee @relation(fields: [peerEvaluationRevieweeId], references: [id])
  peerEvaluationRevieweeId String
  peerEvaluationColumn     PeerEvaluationColumn   @relation(fields: [peerEvaluationColumnId], references: [id])
  peerEvaluationColumnId   String
}

model PeerEvaluationStudentTeam {
  id                        String                  @id @default(cuid())
  createdAt                 DateTime                @default(now())
  updatedAt                 DateTime                @default(now()) @updatedAt
  name                      String
  peerEvaluationStudentList PeerEvaluationStudent[]
  mark                      Decimal
  peerEvaluation            PeerEvaluation          @relation(fields: [peerEvaluationId], references: [id])
  peerEvaluationId          String

  @@unique([name, peerEvaluationId])
}

model PeerEvaluationTeachingMember {
  id               String                            @id @default(cuid())
  createdAt        DateTime                          @default(now())
  updatedAt        DateTime                          @default(now()) @updatedAt
  role             PeerEvaluationTeachingMemberRoles @default(VIEWER)
  peerEvaluation   PeerEvaluation                    @relation(references: [id], fields: [peerEvaluationId], onDelete: Cascade)
  peerEvaluationId String
  user             User                              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId           String

  @@unique([userId, peerEvaluationId])
}

model PeerEvaluationColumn {
  id                           String                         @id @default(cuid())
  createdAt                    DateTime                       @default(now())
  updatedAt                    DateTime                       @default(now()) @updatedAt
  description                  String
  peerEvaluation               PeerEvaluation                 @relation(fields: [peerEvaluationId], references: [id], onDelete: Cascade)
  peerEvaluationId             String
  PeerEvaluationRevieweeColumn PeerEvaluationRevieweeColumn[]

  @@unique([id, peerEvaluationId])
}

model Email {
  id               String          @id @default(cuid())
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @default(now()) @updatedAt
  subject          String
  body             String
  peerEvaluation   PeerEvaluation? @relation(fields: [peerEvaluationId], references: [id])
  peerEvaluationId String?         @unique
}

enum UserRoles {
  ADMIN
  LECTURER
  STUDENT
}

enum PeerEvaluationStatuses {
  DRAFT
  PUBLISHED
  UNPUBLISHED
  SUBMISSIONS_LOCKED
}

enum PeerEvaluationTeachingMemberRoles {
  OWNER
  EDITOR
  VIEWER
}

enum Schools {
  SCHOOL_OF_ARTS_AND_CREATIVE_INDUSTRIES
  SCHOOL_OF_APPLIED_SCIENCES
  SCHOOL_OF_THE_BUILT_ENVIRONMENT_AND_ARCHITECTURE
  LSBU_BUSINESS_SCHOOL
  SCHOOL_OF_ENGINEERING
  SCHOOL_OF_LAW_AND_SOCIAL_SCIENCES
  INSTITUTE_OF_HEALTH_AND_SOCIAL_CARE
}
